@using WebDauGia.Helper

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/Home/icon.png" />
    <title>@ViewBag.Title - Sky Market</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <script src="~/Scripts/modernizr-2.6.2.js"></script>*@
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/jquery-3.2.0.min.js"></script>

    @RenderSection("css", false)
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Images/Home/logo.png" />
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @*<ul class="nav navbar-nav">
                        <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">One more separated link</a></li>
                            </ul>
                        </li>
                    </ul>*@
                <form class="navbar-form navbar-left" method="get" action="@Url.Action("Search", "Product")">
                    <div class="form-group">
                        <input type="text" name="txtkey" class="form-control" value="@ViewBag.key" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Tìm kiếm</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    @*<li><a href="#">Link</a></li>*@
                    @if (CurrentContext.IsLogged() == false)
                    {
                        <li><a href="@Url.Action("Register", "User")">Đăng ký</a></li>
                        <li><a href="@Url.Action("Login", "User")">Đăng Nhập</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Index","Cart")">
                            <i class="fa fa-shopping-cart"></i>
                            Giỏ hàng có @*@CurrentContext.GetCart().SumQ() sản phẩm*@
                            </a>
                    </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                @*@CurrentContext.GetCurUser().Phone*@
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @*<li><a href="@Url.Action("Profile","Account")">Thông tin cá nhân</a></li>*@
                                <li><a href="@Url.Action("Edit", "User")">Thông tin cá nhân</a></li>
                                @*<li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>*@
                                <li role="separator" class="divider"></li>
                                <li><a id="logoutLink" href="javascript:;">Thoát</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->


        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/Home/2.jpg" />
                    <div class="carousel-caption">
                        <h1>Sàn đấu giá trực tuyến</h1>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/Home/3.jpg" />
                    <div class="carousel-caption">
                        <h1>Sàn đấu giá trực tuyến</h1>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/Home/4.jpg" />
                    <div class="carousel-caption">
                        <h1>Sàn đấu giá trực tuyến</h1>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/Home/5.jpg" />
                    <div class="carousel-caption">
                        <h1>Sàn đấu giá trực tuyến</h1>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            @*<div class="col-md-12">
                    <img src="~/Images/Home/1.jpg" />
                    <h2 style="vertical-align:central">Hiện thông tin HOT</h2>
                </div>*@
            @*/////////Đổi chổ này 3 thành 2 nhé*@
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Danh mục
                    </div>
                    @Html.Action("List", "Category")
                </div>
                @*<div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                Hãng sản xuất
                            </h3>
                        </div>
                        <div class="panel-body">
                            Panel content
                        </div>
                    </div>*@
            </div>
            <div class="col-md-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @RenderSection("view_title")
                    </div>
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6 paddingtop-bottom ">
                    <div class="logofooter">
                        <img src="~/Images/Home/logo.png" />
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 footerleft ">
                    <p><i class="fa fa-map-pin"></i> Thành phố Hồ Chí Minh, Việt Nam</p>
                    <p><i class="fa fa-phone"></i> Phone (VN) : 0123456789</p>
                </div>
                <div class="col-md-3 col-sm-6 footerleft ">
                    <p><i class="fa fa-envelope"></i> E-mail : doanwebdaugia@gmail.com</p>
                    <p>&copy; @DateTime.Now.Year - Our ASP.NET Web</p>
                </div>
                <div class="col-md-3 col-sm-6 paddingtop-bottom">
                    <div class="fb-page" data-href="https://www.facebook.com/facebook" data-tabs="timeline" data-height="300" data-small-header="false" style="margin-bottom:15px;" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                        <div class="fb-xfbml-parse-ignore">
                            <blockquote cite="https://www.facebook.com/facebook"><a href="https://www.facebook.com/facebook">Facebook</a></blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Content/jquery-3.2.0.min.js"></script>
    <script src="~/Content/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script>

        $('#myCarousel').carousel({
            interval: 4000
        });
    </script>
    @RenderSection("js", false)
</body>
</html>