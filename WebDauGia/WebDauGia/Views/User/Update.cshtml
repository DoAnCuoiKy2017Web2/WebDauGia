@section css{
    <link href="~/Content/DatePicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
}
@section js{
    <script src="~/Content/DatePicker/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        $('.datepicker').datepicker({
            format: 'd/mm/yyyy',
            autoclose: true,
        });
    </script>
}
@if (@ViewBag.Message == "yes")
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Thông báo: </strong> Cập nhật thành công.
    </div>
}
else if (@ViewBag.Message == "no")
{
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Lỗi!</strong> Cập nhật thất bại!
    </div>
}
else
{

}
<div class="col-md-12">
    <div class="card">
        <div class="card-header" data-background-color="blue">
            <h4 class="title">
                <i class="fa fa-wrench" aria-hidden="true"></i>
               Cập nhật thông tin cá nhân
            </h4>
            @*<p class="category">Danh sách bbb </p>*@
        </div>
        <div class="card-content table-responsive">


            <form class="form-horizontal" method="post" action="">
                <h4 class="header blue bolder smaller">Thông tin chung</h4>
                <div class="col-xs-12 col-sm-8">
                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username" style="font-size:15px;color:black">Tên đăng nhập </label>

                        <div class="col-sm-8">
                            <input class="col-xs-12 col-sm-10" type="text" id="form-field-username" name="UserName" placeholder="Username" value="@Model.UserName" readonly />
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first" style="font-size:15px;color:black">Họ tên</label>

                        <div class="col-sm-8">
                            <input class="col-xs-12 col-sm-10" type="text" id="form-field-name" name="Name" placeholder="Họ tên" value="@Model.Name" />
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first" style="font-size:15px;color:black">Địa chỉ</label>

                        <div class="col-sm-8">
                            <input class="col-xs-12 col-sm-10" type="text" id="form-field-name" name="Address" placeholder="Địa chỉ" value="@Model.Address" />
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-date" style="font-size:15px;color:black">Ngày sinh</label>

                        <div class="col-sm-8">
                            <div class="input-medium">
                                <div class="input-group">
                                    <input type="text" class="form-control datepicker" id="txtDateOfBirth" name="DateOfBirth" placeholder="chọn" readonly value="@String.Format("{0:d/M/yyyy}", Model.DateOfBirth)" />
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="space-4"></div>
                    <div class="form-group">
                        <label for="@Model.Gender" class="col-sm-4 control-label no-padding-right" style="font-size:15px;color:black">Giới tính</label>

                        <div class="col-sm-8">
                            <div class="editor-field">
                            @Html.RadioButtonFor(model => model.Gender, "Nam", Model.Gender == "Nam"?true:false) Nam
                            @Html.RadioButtonFor(model => model.Gender, "Nữ", Model.Gender == "Nữ" ? true : false) Nữ
                            @Html.RadioButtonFor(model => model.Gender, "Khác", Model.Gender == "Khác" ? true : false) Khác
                            @Html.ValidationMessageFor(model => model.Gender)<br />
                            </div>
                        </div>
                    </div>
                    <div class="space-4"></div>


                    <div class="space"></div>
                    <hr />
                    <h4 class="header blue bolder smaller">Liên hệ</h4>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-email" style="font-size:15px;color:black">Email</label>

                        <div class="col-sm-8">
                            <span class="input-icon input-icon-right">
                                <input class="col-xs-12 col-sm-10" type="email" id="form-field-email" name="Email" value="@Model.Email" />
                                <i class="ace-icon fa fa-envelope"></i>
                            </span>
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-phone" style="font-size:15px;color:black">Điện thoại</label>

                        <div class="col-sm-8">
                            <span class="input-icon input-icon-right">
                                <input class="col-xs-12 col-sm-10" type="tel" id="form-field-tel" name="Phone" value="@Model.Phone" />
                                <i class="ace-icon fa fa-phone fa-flip-horizontal"></i>
                            </span>
                        </div>
                    </div>


                </div>

                            @*<hr />*@



                <div class="space"></div>

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" type="submit">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Lưu thay đổi
                        </button>

                        &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Hủy
                        </button>
                    </div>
                </div>
            </form>


        </div>
    </div>
</div>



