<form class="form-horizontal" method="post" action="">
    <div class="tabbable">
        <div class="tab-content profile-edit-tab-content">
            <div id="edit-basic" class="tab-pane in active">
                <h4 class="header blue bolder smaller">Thông tin chung</h4>

                <div class="row">

                    <div class="vspace-12-sm"></div>

                    <div class="col-xs-12 col-sm-8">
                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Tên đăng nhập </label>

                            <div class="col-sm-8">
                                <input class="col-xs-12 col-sm-10" type="text" id="form-field-username" name="UserName" placeholder="Username" value="@Model.UserName" readonly />
                            </div>
                        </div>

                        <div class="space-4"></div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Họ tên</label>

                            <div class="col-sm-8">
                                <input class="col-xs-12 col-sm-10" type="text" id="form-field-name" name="Name" placeholder="Họ tên" value="@Model.Name" />
                            </div>
                        </div>

                        <div class="space-4"></div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Địa chỉ</label>

                            <div class="col-sm-8">
                                <input class="col-xs-12 col-sm-10" type="text" id="form-field-name"name="Address" placeholder="Địa chỉ" value="@Model.Address" />
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-date">Ngày sinh</label>

                    <div class="col-sm-9">
                        <div class="input-medium">
                            <div class="input-group">
                                <input type="text" class="form-control datepicker" id="txtDateOfBirth" name="DateOfBirth" placeholder="chọn" readonly value="@Model.DateOfBirth.ToShortDateString()" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">Giới tính</label>

                    <div class="col-sm-9">
                        
                        @* chưa xử lý radiobutton nam nữ*@
                        @if (Model.Gender == "Nam")
                        {
                            <label class="inline">
                                <input name="form-field-radio" type="radio" class="ace" checked />
                                <span class="lbl middle"> Nam</span>
                            </label>

                            
                            <label class="inline">
                                <input name="form-field-radio" type="radio" class="ace" />
                                <span class="lbl middle"> Nữ</span>
                            </label>
                        }
                        else if (Model.Gender == "Nữ")
                        {
                            <label class="inline">
                                <input name="form-field-radio" type="radio" class="ace" />
                                <span class="lbl middle"> Nam</span>
                            </label>

                            
                            <label class="inline">
                                <input name="form-field-radio" type="radio" class="ace" checked />
                                <span class="lbl middle"> Nữ</span>
                            </label>
                        }
                        else
                        {
                                <i>Khac</i>
                            }
                    </div>
                </div>

                <div class="space-4"></div>


                <div class="space"></div>
                <h4 class="header blue bolder smaller">Liên hệ</h4>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-email">Email</label>

                    <div class="col-sm-9">
                        <span class="input-icon input-icon-right">
                            <input type="email" id="form-field-email" name="Email" value="@Model.Email" />
                            <i class="ace-icon fa fa-envelope"></i>
                        </span>
                    </div>
                </div>

                <div class="space-4"></div>

                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-phone">Điện thoại</label>

                    <div class="col-sm-9">
                        <span class="input-icon input-icon-right">
                            <input type="tel" id="form-field-tel" name="Phone" value="@Model.Phone" />
                            <i class="ace-icon fa fa-phone fa-flip-horizontal"></i>
                        </span>
                    </div>
                </div>
                <div class="space"></div>
            </div>

        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Lưu thay đổi
            </button>

            &nbsp; &nbsp;
            <button class="btn" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Hủy
            </button>
        </div>
    </div>
</form>


