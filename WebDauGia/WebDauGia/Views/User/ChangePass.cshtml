@using WebDauGia.Models
@using WebDauGia.Helper
@section view_title{
    Thay đổi mật khẩu
}

@if (ViewBag.ErrorMsg != null)
{
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Lỗi!</strong> @ViewBag.ErrorMsg
    </div>
}
<form class="form-horizontal" method="post" action="/User/ChangePass">
    <div class="tabbable">
        <div class="tab-content profile-edit-tab-content">
            <div id="edit-basic" class="tab-pane in active">

                <div class="row">

                    <div class="vspace-12-sm"></div>

                    <div class="col-xs-12 col-sm-8">
                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Nhập mật khẩu cũ </label>
                            @{
                                User us = (User)Session["user"];

                            }
                            <input type="hidden" name="UserName" value="@us.UserName" />
                            <div class="col-sm-8">
                                <input class="col-xs-12 col-sm-10" type="text" id="tOPassWord" placeholder="mật khẩu cũ" name="tOPassWord" />
                            </div>
                        </div>

                        <div class="space-4"></div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Nhập mật khẩu mới</label>

                            <div class="col-sm-8">
                                <input class="col-xs-12 col-sm-10" type="text" id="tNPassWord" placeholder="Mật khẩu mới" name="tNPassWord" />
                            </div>
                        </div>

                        <div class="space-4"></div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Xác nhận mật khẩu mới</label>

                            <div class="col-sm-8">
                                <input class="col-xs-12 col-sm-10" type="text" id="form-field-name" readonly placeholder="Xác nhận mật khẩu mới" name="ReNewPassWord" />
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            
            @Html.Hidden("un", CurrentContext.GetCurUser().UserName)
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Lưu thay đổi
            </button>

            &nbsp; &nbsp;
            <button class="btn" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Hủy
            </button>
        </div>
    </div>
</form>

