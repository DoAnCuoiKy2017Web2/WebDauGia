@using WebDauGia.Models
@model List<Product>
@{
    ViewBag.Title = @ViewBag.CatName;
}
@section view_title{
    Danh sách sản phẩm: @ViewBag.CatName
}
@section css{
    <link href="~/Content/LightBox/Hinh.css" rel="stylesheet" />
}
@if (Model.Count == 0)
{
    <text>Không có sản phẩm.</text>
}
else
{
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    @if (WebDauGia.Models.Function.CheckNew(p.StartTime) == 1)
                    {
                        <a href="@Url.Action("Detail", "Product", new { id = p.ProID})" class="item">
                            <span class="nhan">NEW</span>
                            <img src="~/Images/sp/@p.ProID/main_thumbs.jpg" title="@p.ProName" />
                        </a>
                    }
                    else
                    {<a href="@Url.Action("Detail", "Product", new { id = p.ProID})">
                        <img src="~/Images/sp/@p.ProID/main_thumbs.jpg" title="@p.ProName" />
                    </a> }
                    
                    <div class="caption">
                        <p style="overflow:hidden;text-overflow:ellipsis">@p.ProName</p>
                        <p>Lượt đấu: (@p.NumOfAuction)</p>
                        <p>Người mua: @p.Owner</p>
                        <p style="color:navy">Giá: @string.Format("{0:N0}", p.Price) VNĐ</p>
                        <p style="color:red">Còn: @Function.DateTimeToString(p.EndTime)</p>
                        <p style="overflow:hidden;text-overflow:ellipsis; white-space:nowrap"></p>
                        <p>
                            <a href="@Url.Action("Detail", "Product", new { id = p.ProID})" class="btn btn-default" role="button">
                                Chi tiết
                            </a>
                            <a href="#" class="btn btn-success" role="button">
                                <i class="fa fa-cart-plus"></i>
                                Đấu giá
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (@ViewBag.curPage == 1)
            {
                <li class="disabled">
                    <a aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a href="?page=@(ViewBag.curPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= @ViewBag.Pages; i++)
            {
                if (i == ViewBag.curPage)
                {
                    <li class="active"><a href="?page=@i">@i</a></li>
                }
                else
                {
                    <li><a href="?page=@i">@i</a></li>
                }
            }
            @if (@ViewBag.curPage == @ViewBag.Pages)
            {
                <li class="disabled">
                    <a aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a href="?page=@(ViewBag.curPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}

